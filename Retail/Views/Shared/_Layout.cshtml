<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Retail</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Retail.styles.css" asp-append-version="true" />
    <style>
        /* Navbar Styles */
        .navbar {
            background-color: #000; /* Black background */
            color: #fff;
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }

        .nav-link:hover {
            color: #ccc !important; /* Light gray hover effect */
        }

        /* Main Content */
        .container {
            margin-top: 30px;
        }

        /* Footer Styles */
        .footer {
            background-color: #000; /* Black background */
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }

        .footer a {
            color: #fff;
            text-decoration: none;
        }

        .footer a:hover {
            color: #ccc; /* Light gray hover effect */
        }

        /* Buttons */
        .btn-primary {
            background-color: #000; /* Black button */
            border-color: #000;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #333; /* Darker shade on hover */
            border-color: #333;
        }

        /* Customize text */
        .text-muted {
            color: #6c757d !important; /* Maintain muted gray color */
        }

        .text-dark {
            color: #000 !important; /* Ensure black text color */
        }

        /* Page Styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #fff; /* White background */
            color: #000; /* Black text */
        }

        /* Form Styling */
        form {
            background-color: #f8f8f8; /* Light gray form background */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        /* Tables */
        .table {
            margin-top: 20px;
            border: 1px solid #000; /* Black border */
            border-radius: 8px;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table thead th {
            background-color: #000; /* Black header */
            color: #fff; /* White text */
        }

        .table tbody tr:hover {
            background-color: #f2f2f2; /* Light gray hover */
        }

        /* Custom Margin and Padding */
        .mt-3 {
            margin-top: 1rem !important;
        }

        .mb-3 {
            margin-bottom: 1rem !important;
        }


            .navbar-nav .nav-link {
                color: #fff !important; /* White text on collapse */
            }
        }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ABCRetail</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index">Customer Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ProductImage" asp-action="Index"> Product Image</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="File" asp-action="Index">Files</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">Order</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Retail - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>