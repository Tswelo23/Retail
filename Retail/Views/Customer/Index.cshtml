@model IEnumerable<CustomerProfile>

@{
    ViewBag.Title = "Customer Profiles";
}

<h2>Customer Profiles</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>
                    <a href="/Customer/Edit?partitionKey=@customer.PartitionKey&rowKey=@customer.RowKey" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Customer/Delete?partitionKey=@customer.PartitionKey&rowKey=@customer.RowKey" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Customer/Create" class="btn btn-success">Create New Customer</a>
